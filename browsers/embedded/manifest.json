{
    "name": "DuckDuckGo Embedded Extension",
    "description": "Embedded extension for native app integration",
    "version": "2026.2.27",
    "manifest_version": 3,
    "default_locale": "en",
    "background": {
        "service_worker": "public/js/background-embedded.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "public/js/content-scripts/cpm.js"
            ],
            "run_at": "document_start",
            "world": "ISOLATED",
            "match_origin_as_fallback": true,
            "all_frames": true
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
        "alarms",
        "scripting",
        "storage",
        "tabs",
        "webNavigation",
        "nativeMessaging"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "browser_specific_settings": {
        "duckduckgo": {
            "id": "com.duckduckgo.web-extension.embedded"
        }
    }
}