{
    "name": "DuckDuckGo Embedded Extension",
    "description": "Embedded extension for native app integration",
    "version": "2026.2.6",
    "manifest_version": 3,
    "default_locale": "en",
    "background": {
        "service_worker": "public/js/background-embedded.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
        "alarms",
        "scripting",
        "storage",
        "tabs",
        "webNavigation",
        "nativeMessaging"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}
