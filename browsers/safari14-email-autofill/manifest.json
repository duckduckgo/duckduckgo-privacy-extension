{
  "name": "DuckDuckGo Email Protection",
  "version": "2021.3.2.1",
  "description": "Add privacy to your emails and stop them tracking you",
  "icons": {
      "16": "img/safari14-email-autofill/icon_16.png",
      "48": "img/safari14-email-autofill/icon_48.png",
      "128": "img/safari14-email-autofill/icon_128.png",
      "256": "img/safari14-email-autofill/icon_256.png",
      "512": "img/safari14-email-autofill/icon_512.png",
      "1024": "img/safari14-email-autofill/icon_1024.png"
  },
  "manifest_version": 2,
  "browser_action": {
      "default_icon": {
          "19": "img/safari14-email-autofill/icon_19.png",
          "38": "img/safari14-email-autofill/icon_38.png"
      },
      "default_popup": "html/popup.html"
  },
  "background": {
          "scripts": [
              "public/js/background.js"
          ]
  },
  "content_scripts": [
    {
      "js": [
        "public/js/content-scripts/email-autofill.js"
      ],
      "css": [
        "public/css/email-host-styles.css"
      ],
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://app.asana.com/*"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "permissions": [
      "contextMenus",
      "webRequest",
      "*://*/*",
      "tabs",
      "storage",
      "<all_urls>",
      "alarms"
  ],
  "web_accessible_resources": [
      "img/logo-small.svg",
      "public/css/email-autofill.css",
      "public/font/ProximaNova-Reg-webfont.woff2",
      "public/font/ProximaNova-Bold-webfont.woff2"
  ]
}
